<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/text_view_stock_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:text="THYAO"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/text_view_title_price_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_stock_name"
        android:text="Fiyat/Değişim" />

    <TextView
        android:id="@+id/text_view_price_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/text_view_title_price_change"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@id/text_view_title_price_change"
        android:gravity="right"
        android:text="5,30 TL / % -2,14" />

    <TextView
        android:id="@+id/text_view_title_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_title_price_change"
        android:text="Tutar" />

    <TextView
        android:id="@+id/text_view_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/text_view_title_amount"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@id/text_view_title_amount"
        android:gravity="right"
        android:text="10.410,00" />

    <TextView
        android:id="@+id/text_view_title_average_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_title_amount"
        android:text="Ortalama Maliyet" />

    <TextView
        android:id="@+id/text_view_average_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/text_view_title_average_cost"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@id/text_view_title_average_cost"
        android:gravity="right"
        android:text="24,00" />

    <TextView
        android:id="@+id/text_view_title_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_title_average_cost"
        android:text="Adet" />

    <TextView
        android:id="@+id/text_view_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/text_view_title_quantity"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@id/text_view_title_quantity"
        android:gravity="right"
        android:text="500" />

    <TextView
        android:id="@+id/text_view_title_profit_loss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_title_quantity"
        android:text="Kar / Zarar" />

    <TextView
        android:id="@+id/text_view_profit_loss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/text_view_title_profit_loss"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@id/text_view_title_profit_loss"
        android:gravity="right"
        android:text="-590,00" />

</RelativeLayout>